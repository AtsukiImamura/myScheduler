<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>


<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduler.view.workDisplayer.ColorDetailController">
	<children>
		<HBox>
			<Label styleClass="title_label">
				<text>名称</text>
			</Label>
			<Label fx:id="dispNameLabel" styleClass="project_detail_color,proejct_detail_color,output_label,output_basic,displayer_font">
				<text></text>
			</Label>
		</HBox>
		<HBox>
			<Label styleClass="title_label">
				<text>カラー</text>
			</Label>
			<Pane fx:id="dispColorPane" styleClass="output_label,output_basic,displayer_font" prefWidth="220"/>
		</HBox>
		<HBox>
			<Label styleClass="title_label">
				<text>詳細</text>
			</Label>
			<Label fx:id="dispDetailLabel" styleClass="project_detail_color,output_area,output_basic,displayer_font" prefHeight="120">
				<text></text>
			</Label>
		</HBox>
		<HBox>
			<Button fx:id="deleteButton" onAction="#onDeleteButtonClicked" styleClass="delete_button,work_disp_button_base">
				<text>削除</text>
			</Button>
			<Button fx:id="deleteButton" onAction="#onEditButtonClicked" styleClass="edit_button,work_disp_button_base">
				<text>編集</text>
			</Button>
		</HBox>
	</children>
</fx:root>